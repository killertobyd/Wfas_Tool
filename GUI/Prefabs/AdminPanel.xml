<Prefab>
	<Constants>
		<Constant Name="TypingArea.Height" Value="40" />
		<Constant Name="TypingArea.Width" Value="350" />

		<Constant Name="Standard.DialogCloseButtons.CancelButton.Width" BrushLayer="Default" BrushName="Standard.DialogCloseButtons.CancelButton" BrushValueType="Width" />
		<Constant Name="Standard.DialogCloseButtons.CancelButton.Height" BrushLayer="Default" BrushName="Standard.DialogCloseButtons.CancelButton" BrushValueType="Height" />

		<Constant Name="Standard.DialogCloseButtons.DoneButton.Width" BrushLayer="Default" BrushName="Standard.DialogCloseButtons.DoneButton" BrushValueType="Width" />
		<Constant Name="Standard.DialogCloseButtons.DoneButton.Height" BrushLayer="Default" BrushName="Standard.DialogCloseButtons.DoneButton" BrushValueType="Height" />
	</Constants>

	<Window>
		<Widget HorizontalAlignment="Center" HeightSizePolicy="StretchToParent" SuggestedWidth="700" MarginBottom="50" MarginTop="50">
			<Children>
				<Standard.Window Parameter.Title="Admin Panel" >
					<Children>

						<ListPanel MarginTop="20" MarginRight="50" Id="ListPanel" SuggestedWidth="500" HeightSizePolicy="StretchToParent" StackLayout.LayoutMethod="VerticalBottomToTop"  HorizontalAlignment="Center" >
							<Children>
								<!-- Mission -->
								<TextWidget WidthSizePolicy="Fixed" SuggestedWidth="150" HeightSizePolicy="Fixed" PositionXOffset="-20" SuggestedHeight="35" HorizontalAlignment="Left" Brush="AdminPanel.Header" Text="Mission" IsEnabled="true"/>

								<!-- Mission Drop Downs -->
								<ListPanel   Id="ListPanel" SuggestedWidth="500" SuggestedHeight="200" StackLayout.LayoutMethod="VerticalBottomToTop"  HorizontalAlignment="Center" >
									<Children>
										<!-- Game Type -->
										<ListPanel Id="ListPanel" WidthSizePolicy="Fixed" SuggestedWidth="500" MarginRight="200" HeightSizePolicy="StretchToParent" StackLayout.LayoutMethod="HorizontalLeftToRight"  >
											<Children>
												<TextWidget VerticalAlignment="Center" MarginRight="50" WidthSizePolicy="Fixed" SuggestedWidth="150"  Brush="SPOptions.OptionName.Text" Text="Game Type" IsEnabled="true"/>
												<Standard.DropdownWithHorizontalControl VerticalAlignment="Center" WidthSizePolicy="Fixed" SuggestedWidth="500" Id="GameTypeDropDown" Parameter.SelectorDataSource="{GameTypes}" Parameter.ShowNextAndPrevious="false" GamepadNavigationIndex="0" />
											</Children>
										</ListPanel>

										<!-- Map -->
										<ListPanel Id="ListPanel" VerticalAlignment="Center"  WidthSizePolicy="Fixed" SuggestedWidth="500" MarginRight="200" HeightSizePolicy="StretchToParent" StackLayout.LayoutMethod="HorizontalLeftToRight"  >
											<Children>
												<TextWidget VerticalAlignment="Center" MarginRight="50" WidthSizePolicy="Fixed" SuggestedWidth="150"  Brush="SPOptions.OptionName.Text" Text="Map" IsEnabled="true"/>
												<Standard.DropdownWithHorizontalControl VerticalAlignment="Center" WidthSizePolicy="Fixed" SuggestedWidth="500" Id="MapDropDown" Parameter.SelectorDataSource="{Maps}" Parameter.ShowNextAndPrevious="false" GamepadNavigationIndex="0" />
											</Children>
										</ListPanel>

										<!-- Faction 1 -->
										<ListPanel Id="ListPanel"  WidthSizePolicy="Fixed" SuggestedWidth="500" MarginRight="200" HeightSizePolicy="StretchToParent" StackLayout.LayoutMethod="HorizontalLeftToRight"  >
											<Children>
												<TextWidget VerticalAlignment="Center" MarginRight="50" WidthSizePolicy="Fixed" SuggestedWidth="150"  Brush="SPOptions.OptionName.Text" Text="Faction Team 1" IsEnabled="true"/>
												<Standard.DropdownWithHorizontalControl VerticalAlignment="Center" WidthSizePolicy="Fixed" SuggestedWidth="500" Id="Faction1DropDown" Parameter.SelectorDataSource="{Faction1}" Parameter.ShowNextAndPrevious="false" GamepadNavigationIndex="0" />
											</Children>
										</ListPanel>

										<!-- Faction 2 -->
										<ListPanel Id="ListPanel"  WidthSizePolicy="Fixed" SuggestedWidth="500" MarginRight="200" HeightSizePolicy="StretchToParent" StackLayout.LayoutMethod="HorizontalLeftToRight"  >
											<Children>
												<TextWidget VerticalAlignment="Center" MarginRight="50" WidthSizePolicy="Fixed" SuggestedWidth="150"  Brush="SPOptions.OptionName.Text" Text="Faction Team 2" IsEnabled="true"/>
												<Standard.DropdownWithHorizontalControl VerticalAlignment="Center" WidthSizePolicy="Fixed" SuggestedWidth="500" Id="Faction2DropDown" Parameter.SelectorDataSource="{Faction2}" Parameter.ShowNextAndPrevious="false" GamepadNavigationIndex="0" />
											</Children>
										</ListPanel>

									</Children>
								</ListPanel>


								<!-- Player Management -->
								<TextWidget MarginTop="5" VerticalAlignment="Center" WidthSizePolicy="Fixed" PositionXOffset="-20" SuggestedWidth="150" HeightSizePolicy="Fixed" SuggestedHeight="35" HorizontalAlignment="Left" Brush="AdminPanel.Header" Text="Settings" IsEnabled="true"/>
								<!-- Mission Number Inputs -->
								<ListPanel Id="ListPanel" SuggestedWidth="550" SuggestedHeight="250" StackLayout.LayoutMethod="VerticalBottomToTop"  HorizontalAlignment="Center" >
									<Children>


										<ListPanel Id="ListPanel" WidthSizePolicy="StretchToParent" SuggestedWidth="500" HeightSizePolicy="Fixed" SuggestedHeight="45" StackLayout.LayoutMethod="HorizontalLeftToRight" IsEnabled="@RoundTimeEnabled">
											<Children>
												<TextWidget VerticalAlignment="Center" MarginRight="50" WidthSizePolicy="Fixed" SuggestedWidth="150"  Brush="SPOptions.OptionName.Text" Text="Round Time" IsEnabled="true"/>

												<SliderWidget Id="RoundTimeSlider" WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="268" SuggestedHeight="42" VerticalAlignment="Center" DoNotUpdateHandleSize="true" Filler="Filler" Handle="SliderHandle" MaxValueInt="45" MinValueInt="3" ValueInt="@RoundTimeValue">
													<Children>
														<Widget WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="292" SuggestedHeight="38" HorizontalAlignment="Center" VerticalAlignment="Center" Sprite="SPGeneral\SPOptions\standart_slider_canvas" DoNotAcceptEvents="true" />
														<Widget Id="Filler" WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="275" SuggestedHeight="35" VerticalAlignment="Center" Sprite="SPGeneral\SPOptions\standart_slider_fill" ClipContents="true">
															<Children>
																<Widget WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="275" SuggestedHeight="35" HorizontalAlignment="Left" VerticalAlignment="Center" Sprite="SPGeneral\SPOptions\standart_slider_fill" />
															</Children>
														</Widget>
														<Widget WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="330" SuggestedHeight="65" HorizontalAlignment="Center" VerticalAlignment="Center" Sprite="SPGeneral\SPOptions\standart_slider_frame" DoNotAcceptEvents="true" />
														<ImageWidget Id="SliderHandle" DoNotAcceptEvents="true" WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="14" SuggestedHeight="38" HorizontalAlignment="Left" VerticalAlignment="Center" Brush="SPOptions.Slider.Handle" />
													</Children>
												</SliderWidget>

												<TextWidget VerticalAlignment="Center" MarginRight="350" WidthSizePolicy="Fixed" SuggestedWidth="75" Brush="SPOptions.Slider.Value.Text" IsEnabled="true" IntText="@RoundTimeValue" />
											</Children>
										</ListPanel>

										<ListPanel Id="ListPanel" WidthSizePolicy="StretchToParent" SuggestedWidth="500" HeightSizePolicy="Fixed" SuggestedHeight="45" StackLayout.LayoutMethod="HorizontalLeftToRight">
											<Children>
												<TextWidget VerticalAlignment="Center" MarginRight="50" WidthSizePolicy="Fixed" SuggestedWidth="150"  Brush="SPOptions.OptionName.Text" Text="Warmup Time" IsEnabled="true"/>

												<SliderWidget Id="RoundTimeSlider" WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="268" SuggestedHeight="42" VerticalAlignment="Center" DoNotUpdateHandleSize="true" Filler="Filler" Handle="SliderHandle" MaxValueInt="45" MinValueInt="3" ValueInt="@WarmupTimeValue">
													<Children>
														<Widget WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="292" SuggestedHeight="38" HorizontalAlignment="Center" VerticalAlignment="Center" Sprite="SPGeneral\SPOptions\standart_slider_canvas" DoNotAcceptEvents="true" />
														<Widget Id="Filler" WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="275" SuggestedHeight="35" VerticalAlignment="Center" Sprite="SPGeneral\SPOptions\standart_slider_fill" ClipContents="true">
															<Children>
																<Widget WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="275" SuggestedHeight="35" HorizontalAlignment="Left" VerticalAlignment="Center" Sprite="SPGeneral\SPOptions\standart_slider_fill" />
															</Children>
														</Widget>
														<Widget WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="330" SuggestedHeight="65" HorizontalAlignment="Center" VerticalAlignment="Center" Sprite="SPGeneral\SPOptions\standart_slider_frame" DoNotAcceptEvents="true" />
														<ImageWidget Id="SliderHandle" DoNotAcceptEvents="true" WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="14" SuggestedHeight="38" HorizontalAlignment="Left" VerticalAlignment="Center" Brush="SPOptions.Slider.Handle" />
													</Children>
												</SliderWidget>

												<TextWidget VerticalAlignment="Center" MarginRight="350" WidthSizePolicy="Fixed" SuggestedWidth="75" Brush="SPOptions.Slider.Value.Text" IsEnabled="true" IntText="@WarmupTimeValue" />
											</Children>
										</ListPanel>

										<ListPanel Id="ListPanel" WidthSizePolicy="StretchToParent" SuggestedWidth="500" HeightSizePolicy="Fixed" SuggestedHeight="45" StackLayout.LayoutMethod="HorizontalLeftToRight">
											<Children>
												<TextWidget VerticalAlignment="Center" MarginRight="50" WidthSizePolicy="Fixed" SuggestedWidth="150"  Brush="SPOptions.OptionName.Text" Text="Round Limit" IsEnabled="true"/>

												<SliderWidget Id="RoundLimitSlider" WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="268" SuggestedHeight="42" VerticalAlignment="Center" DoNotUpdateHandleSize="true" Filler="Filler" Handle="SliderHandle" MaxValueInt="19" MinValueInt="1" ValueInt="@RoundLimitValue">
													<Children>
														<Widget WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="292" SuggestedHeight="38" HorizontalAlignment="Center" VerticalAlignment="Center" Sprite="SPGeneral\SPOptions\standart_slider_canvas" DoNotAcceptEvents="true" />
														<Widget Id="Filler" WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="275" SuggestedHeight="35" VerticalAlignment="Center" Sprite="SPGeneral\SPOptions\standart_slider_fill" ClipContents="true">
															<Children>
																<Widget WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="275" SuggestedHeight="35" HorizontalAlignment="Left" VerticalAlignment="Center" Sprite="SPGeneral\SPOptions\standart_slider_fill" />
															</Children>
														</Widget>
														<Widget WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="330" SuggestedHeight="65" HorizontalAlignment="Center" VerticalAlignment="Center" Sprite="SPGeneral\SPOptions\standart_slider_frame" DoNotAcceptEvents="true" />
														<ImageWidget Id="SliderHandle" DoNotAcceptEvents="true" WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="14" SuggestedHeight="38" HorizontalAlignment="Left" VerticalAlignment="Center" Brush="SPOptions.Slider.Handle" />
													</Children>
												</SliderWidget>

												<TextWidget VerticalAlignment="Center" MarginRight="350" WidthSizePolicy="Fixed" SuggestedWidth="75" Brush="SPOptions.Slider.Value.Text" IsEnabled="true" IntText="@RoundLimitValue" />
											</Children>
										</ListPanel>


										<ListPanel Id="ListPanel" WidthSizePolicy="StretchToParent" SuggestedWidth="500" HeightSizePolicy="StretchToParent" StackLayout.LayoutMethod="HorizontalLeftToRight" IsEnabled="true">
											<Children>
												<TextWidget VerticalAlignment="Center" WidthSizePolicy="Fixed" SuggestedWidth="450"  Brush="SPOptions.OptionName.Text" Text="These settings are only applied on a new mission." IsEnabled="true"/>
											</Children>
										</ListPanel>



									</Children>
								</ListPanel>


								<!-- Player Management -->
								<TextWidget MarginTop="5" VerticalAlignment="Center" WidthSizePolicy="Fixed" PositionXOffset="-20" SuggestedWidth="150" HeightSizePolicy="Fixed" SuggestedHeight="35" HorizontalAlignment="Left" Brush="AdminPanel.Header" Text="Players" IsEnabled="true"/>
								<!-- Player Buttons Row 1 -->
								<ListPanel Id="ListPanel"  WidthSizePolicy="Fixed" SuggestedWidth="700" MarginRight="200" HeightSizePolicy="Fixed" SuggestedHeight="45" StackLayout.LayoutMethod="HorizontalLeftToRight"  >
									<Children>

										<!-- Slay -->
										<ButtonWidget  DoNotPassEventsToChildren="true" UpdateChildrenStates="true" WidthSizePolicy="Fixed" HeightSizePolicy="StretchToParent" SuggestedWidth="130" HorizontalAlignment="Center" Brush="WideButton.Flat" Command.Click="ExecuteSlay" IsEnabled="true">
											<Children>
												<TextWidget WidthSizePolicy="StretchToParent" HeightSizePolicy="CoverChildren" VerticalAlignment="Center" Brush="MPLobby.PlayButton.Text" Brush.FontSize="25" Brush.TextVerticalAlignment="Center" Text="Slay" IsEnabled="true" />
											</Children>
										</ButtonWidget>

										<!-- Mute -->
										<ButtonWidget  DoNotPassEventsToChildren="true" UpdateChildrenStates="true" WidthSizePolicy="Fixed" HeightSizePolicy="StretchToParent" SuggestedWidth="130" HorizontalAlignment="Center" Brush="WideButton.Flat" Command.Click="ExecuteMute" IsEnabled="true">
											<Children>
												<TextWidget WidthSizePolicy="StretchToParent" HeightSizePolicy="CoverChildren" VerticalAlignment="Center" Brush="MPLobby.PlayButton.Text" Brush.FontSize="25" Brush.TextVerticalAlignment="Center" Text="Mute" IsEnabled="true" />
											</Children>
										</ButtonWidget>

										<!-- Kick -->
										<ButtonWidget DoNotPassEventsToChildren="true" UpdateChildrenStates="true" WidthSizePolicy="Fixed" HeightSizePolicy="StretchToParent" SuggestedWidth="130"  HorizontalAlignment="Center" Brush="WideButton.Flat" Command.Click="ExecuteKick" IsEnabled="true">
											<Children>
												<TextWidget WidthSizePolicy="StretchToParent" HeightSizePolicy="CoverChildren" VerticalAlignment="Center" Brush="MPLobby.PlayButton.Text" Brush.FontSize="25" Brush.TextVerticalAlignment="Center" Text="Kick" IsEnabled="true" />
											</Children>
										</ButtonWidget>

										<!-- Ban -->
										<ButtonWidget  DoNotPassEventsToChildren="true" UpdateChildrenStates="true" WidthSizePolicy="Fixed" HeightSizePolicy="StretchToParent" SuggestedWidth="130"  HorizontalAlignment="Center" Brush="WideButton.Flat" Command.Click="ExecuteBan" IsEnabled="true">
											<Children>
												<TextWidget WidthSizePolicy="StretchToParent" HeightSizePolicy="CoverChildren" VerticalAlignment="Center" Brush="MPLobby.PlayButton.Text" Brush.FontSize="25" Brush.TextVerticalAlignment="Center" Text="Ban" IsEnabled="true" />
											</Children>
										</ButtonWidget>



									</Children>
								</ListPanel>
								<!-- Player Buttons Row 2 -->
								<ListPanel Id="ListPanel"  WidthSizePolicy="Fixed" SuggestedWidth="500" MarginRight="200" HeightSizePolicy="Fixed" SuggestedHeight="45" StackLayout.LayoutMethod="HorizontalLeftToRight"  >
									<Children>

										<!-- Heal -->
										<ButtonWidget  DoNotPassEventsToChildren="true" UpdateChildrenStates="true" WidthSizePolicy="Fixed" HeightSizePolicy="StretchToParent" SuggestedWidth="150" HorizontalAlignment="Center" Brush="WideButton.Flat" Command.Click="ExecuteHeal" IsEnabled="true">
											<Children>
												<TextWidget WidthSizePolicy="StretchToParent" HeightSizePolicy="CoverChildren" VerticalAlignment="Center" Brush="MPLobby.PlayButton.Text" Brush.FontSize="25" Brush.TextVerticalAlignment="Center" Text="Heal" IsEnabled="true" />
											</Children>
										</ButtonWidget>

										<!-- Teleport To -->
										<ButtonWidget DoNotPassEventsToChildren="true" UpdateChildrenStates="true" WidthSizePolicy="Fixed" HeightSizePolicy="StretchToParent" SuggestedWidth="150"  HorizontalAlignment="Center" Brush="WideButton.Flat" Command.Click="ExecuteGoto" IsEnabled="true">
											<Children>
												<TextWidget  WidthSizePolicy="StretchToParent" HeightSizePolicy="CoverChildren" VerticalAlignment="Center" Brush="MPLobby.PlayButton.Text" Brush.FontSize="25" Brush.TextVerticalAlignment="Center" Text="Goto" IsEnabled="true" />
											</Children>
										</ButtonWidget>

										<!-- Teleport to Me -->
										<ButtonWidget  DoNotPassEventsToChildren="true" UpdateChildrenStates="true" WidthSizePolicy="Fixed" HeightSizePolicy="StretchToParent" SuggestedWidth="200"  HorizontalAlignment="Center" Brush="WideButton.Flat" Command.Click="ExecuteBring" IsEnabled="true">
											<Children>
												<TextWidget WidthSizePolicy="StretchToParent" HeightSizePolicy="CoverChildren" VerticalAlignment="Center" Brush="MPLobby.PlayButton.Text" Brush.FontSize="25" Brush.TextVerticalAlignment="Center" Text="Bring" IsEnabled="true" />
											</Children>
										</ButtonWidget>


									</Children>
								</ListPanel>

								<!-- Player Management -->
								<TextWidget MarginTop="5" VerticalAlignment="Center" WidthSizePolicy="Fixed" PositionXOffset="-20" SuggestedWidth="150" HeightSizePolicy="Fixed" SuggestedHeight="35" HorizontalAlignment="Left" Brush="AdminPanel.Header" Text="Utility" IsEnabled="true"/>
								<!-- Player Buttons Row 1 -->
								<ListPanel Id="ListPanel"  WidthSizePolicy="Fixed" SuggestedWidth="600" MarginRight="200" HeightSizePolicy="Fixed" SuggestedHeight="45" StackLayout.LayoutMethod="HorizontalLeftToRight"  >
									<Children>

										<!-- end warmup -->
										<ButtonWidget DoNotPassEventsToChildren="true" UpdateChildrenStates="true" WidthSizePolicy="Fixed" HeightSizePolicy="StretchToParent" SuggestedWidth="170"  HorizontalAlignment="Center" Brush="WideButton.Flat" Command.Click="ExecuteAnnounce" IsEnabled="true">
											<Children>
												<TextWidget WidthSizePolicy="StretchToParent" HeightSizePolicy="CoverChildren" VerticalAlignment="Center" Brush="MPLobby.PlayButton.Text" Brush.FontSize="25" Brush.TextVerticalAlignment="Center" Text="Announce" IsEnabled="true" />
											</Children>
										</ButtonWidget>
										
										<!-- end warmup -->
										<ButtonWidget DoNotPassEventsToChildren="true" UpdateChildrenStates="true" WidthSizePolicy="Fixed" HeightSizePolicy="StretchToParent" SuggestedWidth="200"  HorizontalAlignment="Center" Brush="WideButton.Flat" Command.Click="ExecuteEndWarmup" IsEnabled="true">
											<Children>
												<TextWidget WidthSizePolicy="StretchToParent" HeightSizePolicy="CoverChildren" VerticalAlignment="Center" Brush="MPLobby.PlayButton.Text" Brush.FontSize="25" Brush.TextVerticalAlignment="Center" Text="End warmup" IsEnabled="true" />
											</Children>
										</ButtonWidget>

										<!-- end warmup -->
										<ButtonWidget DoNotPassEventsToChildren="true" UpdateChildrenStates="true" WidthSizePolicy="Fixed" HeightSizePolicy="StretchToParent" SuggestedWidth="150"  HorizontalAlignment="Center" Brush="WideButton.Flat" Command.Click="ExecuteReset" IsEnabled="true">
											<Children>
												<TextWidget WidthSizePolicy="StretchToParent" HeightSizePolicy="CoverChildren" VerticalAlignment="Center" Brush="MPLobby.PlayButton.Text" Brush.FontSize="25" Brush.TextVerticalAlignment="Center" Text="Reset" IsEnabled="true" />
											</Children>
										</ButtonWidget>

									</Children>
								</ListPanel>
							</Children>
						</ListPanel>				
					</Children>
				</Standard.Window>
				<Standard.DialogCloseButtons Parameter.CancelButtonAction="ExecuteCancel" Parameter.CancelButtonText="Cancel" Parameter.DoneButtonAction="ExecuteDone" Parameter.IsDoneEnabled="@CanComplete" Parameter.DoneButtonText="Start Mission" />
			</Children>
		</Widget>
	</Window>
</Prefab>